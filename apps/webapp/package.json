{
  "name": "webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenvx run -- next dev",
    "build": "dotenvx run -- next build",
    "start": "dotenvx run -- next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "prisma:generate": "dotenvx run -- prisma generate",
    "prisma:generate:docker": "prisma generate",
    "prisma:migrate": "dotenvx run -- prisma migrate dev",
    "prisma:deploy": "dotenvx run -- prisma migrate deploy",
    "prisma:push": "dotenvx run -- prisma db push",
    "prisma:reset": "dotenvx run -- prisma migrate reset",
    "prisma:studio": "prisma studio",
    "react:email": "email dev --dir ./src/emails --port 3001"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.2",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@react-email/components": "^1.0.1",
    "@react-email/render": "^2.0.0",
    "@repo/data-commons": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "input-otp": "^1.4.2",
    "jsdom": "^27.3.0",
    "lucide-react": "^0.561.0",
    "luxon": "^3.7.2",
    "mailparser": "^3.9.1",
    "nanoid": "^5.1.6",
    "next": "^16.0.10",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-hot-toast": "^2.6.0",
    "smtp-server": "^3.17.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/luxon": "^3.7.1",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^25.0.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/smtp-server": "^3.5.12",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "babel-plugin-react-compiler": "^1.0.0",
    "daisyui": "^5.5.13",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.1.0",
    "react-email": "^5.0.8",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
